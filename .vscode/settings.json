{
	"files.exclude": {
		".vscode": true,
    ".ft_cache": true,
	},
  "files.associations": {
    "*.h": "c",
  },
  "C_Cpp.default.cStandard": "c99",
  "C_Cpp.default.includePath": [
    "src/includes",
    ".ft_cache/dependencies/includes",
    "${default}",
  ],
  "c-cpp-flylint.includePaths": [
    "src/includes",
    ".ft_cache/dependencies/includes",
  ],
  "norminette.fileregex": "*\\.[ch]$",
}
